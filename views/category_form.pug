extends layout

block content
  h1= title

  form(method='POST' action='')
   div.form-group
    label(for='name') Name:
    input#title.form-control(type='text', placeholder='Name of category' name='name' required='true' value=(undefined===category ? '' : category.name) )
    label(for='description') description:
    input#title.form-control(type='text', placeholder='description ... ' name='description' required='true' value=(undefined===category ? '' : category.description) )
    
   button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg